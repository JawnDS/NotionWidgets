<body>
  <div class="calendar-widget">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
      <button onclick="changeMonth(-1)">â—€</button>
      <h2 id="monthTitle" style="margin: 0;"></h2>
      <button onclick="changeMonth(1)">â–¶</button>
    </div>
    <div class="calendar" id="calendar"></div>
    <div class="note-box" id="noteBox" style="display:none;">
      <strong id="selectedDateLabel"></strong>
      <textarea id="noteInput" placeholder="Ã‰crivez une note..."></textarea>
      <button onclick="saveNote()">Enregistrer</button>
    </div>
  </div>

  <script>
    const calendarEl = document.getElementById('calendar');
    const monthTitle = document.getElementById('monthTitle');
    const noteBox = document.getElementById('noteBox');
    const noteInput = document.getElementById('noteInput');
    const selectedDateLabel = document.getElementById('selectedDateLabel');

    let selectedDate = null;
    const notes = JSON.parse(localStorage.getItem('calendarNotes') || '{}');

    const today = new Date();
    let currentYear = today.getFullYear();
    let currentMonth = today.getMonth();

    function renderCalendar(year, month) {
      calendarEl.innerHTML = '';
      const firstDay = new Date(year, month, 1).getDay();
      const daysInMonth = new Date(year, month + 1, 0).getDate();

      const days = [];
      for (let i = 0; i < firstDay; i++) days.push('');
      for (let i = 1; i <= daysInMonth; i++) days.push(i);

      days.forEach((day) => {
        const cell = document.createElement('div');
        cell.classList.add('day');

        if (day === '') {
          cell.style.visibility = 'hidden';
        } else {
          const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;

          if (notes[dateStr]) {
            cell.classList.add('has-note');
            cell.innerHTML = `<strong>${day}</strong><div style="font-size:10px; color:#0f0;">ðŸ”´</div>`;
            cell.title = notes[dateStr].replace(/"/g, "'");
          } else {
            cell.textContent = day;
          }
          cell.addEventListener('click', () => {
            document.querySelectorAll('.day').forEach(d => d.classList.remove('selected'));
            cell.classList.add('selected');
            selectedDate = dateStr;
            selectedDateLabel.textContent = `Note pour le ${selectedDate}`;
            noteInput.value = notes[selectedDate] || '';
            noteBox.style.display = 'block';
          });
        }

        calendarEl.appendChild(cell);
      });

      const monthNames = ["Janvier", "FÃ©vrier", "Mars", "Avril", "Mai", "Juin",
                          "Juillet", "AoÃ»t", "Septembre", "Octobre", "Novembre", "DÃ©cembre"];
      monthTitle.textContent = `${monthNames[month]} ${year}`;
    }

    function saveNote() {
      if (selectedDate) {
        notes[selectedDate] = noteInput.value;
        localStorage.setItem('calendarNotes', JSON.stringify(notes));
        renderCalendar(currentYear, currentMonth);
        alert("Note enregistrÃ©e !");
      }
    }

    function changeMonth(offset) {
      currentMonth += offset;
      if (currentMonth < 0) {
        currentMonth = 11;
        currentYear--;
      } else if (currentMonth > 11) {
        currentMonth = 0;
        currentYear++;
      }
      renderCalendar(currentYear, currentMonth);
    }

    renderCalendar(currentYear, currentMonth);
  </script>
</body>
